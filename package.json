{
  "name": "@oqool/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Oqool AI - Professional IDE with CLI and Shared Libraries",
  "author": "Oqool Team",
  "license": "MIT",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:cli": "npm run dev --workspace=@oqool/cli",
    "build:cli": "npm run build --workspace=@oqool/cli",
    "build:shared": "npm run build --workspace=@oqool/shared",
    "build:all": "npm run build --workspaces",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3"
  }
}
