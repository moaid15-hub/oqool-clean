{
  "name": "@oqool/monorepo",
  "version": "1.0.0",
  "private": false,
  "description": "Oqool AI - Professional IDE with CLI and Shared Libraries",
  "author": "Oqool Team",
  "license": "MIT",
  "packageManager": "npm@10.2.4",
  "bin": {
    "oqool": "./oqool.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:cli": "npm run dev --workspace=@oqool/cli",
    "build:cli": "npm run build --workspace=@oqool/cli",
    "build:shared": "npm run build --workspace=@oqool/shared",
    "build:all": "npm run build --workspaces",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.3",
    "dotenv": "^17.2.3",
    "ollama": "^0.6.2"
  }
}
